---
import { buttonVariants } from "@/components/ui/button";
import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import { toast } from "sonner";
---

<MainLayout title="Pricing" mainClass="flex-1 bg-background-200">
  <section
    class="container flex flex-col gap-6 py-8 md:max-w-[64rem] md:py-12 lg:py-24"
  >
    <div class="mx-auto flex w-full flex-col gap-4 md:max-w-[58rem]">
      <h2 class="font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
        Simple, transparent pricing
      </h2>
      <p
        class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7"
      >
        Unlock data tranquility with our simple pricing model.
      </p>
    </div>
    <div
      class="grid w-full items-start gap-10 rounded-3xl overflow-hidden border p-10 md:grid-cols-[1fr_200px] bg-background"
    >
      <div class="grid gap-6">
        <h3 class="text-xl font-bold sm:text-2xl">
          The Data Tranqulity Plan
        </h3>
        <ul class="grid gap-3 text-sm text-muted-foreground sm:grid-cols-2">
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> 14-day free trial
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> 
          </li>

          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> CRM Integrations
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" />1200 Prompts
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Warehouse Integrations (Add On)
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" />24/7 Support
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4 text-center">
        <div>
          <h4 class="text-7xl font-bold">$75</h4>
          <p class="text-sm font-medium text-muted-foreground">
            Per User
          </p>
          <p class="text-xs font-medium text-muted-foreground">
            Billed Monthly
          </p>
        </div>
<!--         <a href="https://buy.stripe.com/3csbKD9t24mM6C4bII" class={cn(buttonVariants({ size: "lg" }))}>
          Show Pre-Love ❤️
        </a> -->
      </div>
    </div>
    <div class="mx-auto flex w-full max-w-[58rem] flex-col gap-4">
      <p class="max-w-[85%] leading-normal text-muted-foreground sm:leading-7">
        We'll be launching soon, so stay in touch via the changelog if you're curious about trying Bloom{" "}
      </p>
    </div>
  </section>
</MainLayout>
